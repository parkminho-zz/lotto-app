generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  userId    String   @unique
  password  String
  name      String
  role      Role     @default(USER) 
  createdAt DateTime @default(now())

  // Relations
  lottoClicks LottoClickLog[]
  loginLogs   LoginLog[]
  pageVisits  PageVisitLog[]
}

enum Role {
  USER     
  ADMIN   
}

model LottoClickLog {
  id        Int      @id @default(autoincrement())
  userId    String
  clickedAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [userId])
}

model LoginLog {
  id        Int      @id @default(autoincrement())
  userId    String
  loginAt   DateTime @default(now())
  ip        String?

  user      User     @relation(fields: [userId], references: [userId])
}

model LoginFailLog {
  id         Int      @id @default(autoincrement())
  userId     String
  failedAt   DateTime @default(now())
  reason     String
  ip         String?
}

model PageVisitLog {
  id        Int      @id @default(autoincrement())
  userId    String?
  page      String
  visitedAt DateTime @default(now())
  ip        String?

  user      User?    @relation(fields: [userId], references: [userId])
}

model LottoResult {
  id              Int      @id @default(autoincrement())
  year            Int
  round           Int      @unique
  drawDate        DateTime

  firstWinners    Int
  firstPrize      BigInt

  secondWinners   Int
  secondPrize     BigInt

  thirdWinners    Int
  thirdPrize      BigInt

  fourthWinners   Int
  fourthPrize     BigInt

  fifthWinners    Int
  fifthPrize      BigInt

  number1         Int
  number2         Int
  number3         Int
  number4         Int
  number5         Int
  number6         Int
  bonusNumber     Int
}